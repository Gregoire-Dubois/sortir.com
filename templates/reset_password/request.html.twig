{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Réinitialiser le mot de passe {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/oublieMdpRequest.css') }}">
{% endblock %}

{%  block header %}{% endblock %}

{% block body %}
    <!-- {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %} -->

<section class="default_container">

    <div class="forgot_pwd_container">
        <!-- Titre du bloc "Réinitialisation du mot de passe" -->
        <h2>Réinitialiser votre mot de passe</h2>

        <div class="forgot_pwd_message">Entrez votre adresse e-mail, un lien de réinitialisation de mot de passe vous sera envoyé.</div>

    	{{ form_start(requestForm, {'attr': {'class': 'forgot_pwd_form'}, 'render_form': false}) }}
        <label class="column1 row1 default_label">Email :</label>
        {{ form_widget(requestForm.email, {'label': false, 'attr': {'class': 'colum2 row1 default_input', 'type':'email', 'required': 'required'}}) }}
        <div class="column2 row2 default_error_message">{{ form_errors(requestForm.email) }}</div>

        <div class="column1-2 row3"><button type="submit" class="default_principal_button" >Envoyer un e-mail de réinitialisation du mot de passe</button></div>

    {{ form_end(requestForm) }}
    </div>
</section>

{% endblock %}
