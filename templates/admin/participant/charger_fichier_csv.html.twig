{% extends 'base.html.twig' %}

{% block title %}
Inscriptiion fichier CSV | {{ parent() }}
{% endblock %}

{% block body %}
<h1>Import d'un fichier CSV</h1>
    {% if (aNewParticipants) %}

        <div class='alert alert-success'>{{ aNewParticipants|length }} participants importés.</div>
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Téléphone</th>
                <th>Actif</th>
                <th>Campus</th>
                <th>Date de création</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in aNewParticipants %}
                <tr>
                    <td>{{ participant.id }}</td>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.pseudo }}</td>
                    <td>{{ participant.email}}</td>
                    <td>
                        {% for role in participant.roles %}
                            {# Affiche chaque rôle et une virgule tant que ce n'est pas le dernier  #}
                            {{ role }}{{ (loop.last) ? '' : ',' }}
                        {% endfor %}
                    </td>
                    <td>{{ participant.telephone }}</td>
                    <td>{{ participant.actif}}</td>
                    <td>{{ participant.campus.nom }}</td>
                    <td>{{ participant.dateCreation|date('d-m-Y')}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class='alert alert-danger'>Aucun participant importé.</div>
    {% endif %}

    <a href="{{ path('sortie_listeSortie') }}"><button>Retour à la page d'accueil</button></a>
{% endblock %}



